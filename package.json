{
  "name": "react-rx",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "tsc --noEmit && jest"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.2.3",
    "@types/react": "18.0.25",
    "jest": "29.3.1",
    "lerna": "6.1.0",
    "prettier": "2.8.0",
    "react": "18.2.0",
    "react-test-renderer": "18.2.0",
    "ts-jest": "29.0.3",
    "typescript": "4.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
